{{template "base" .}}

{{define "content"}}
    <div class="container">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="mt-5">Search for availability</h1>
                <form action="" method="get" novalidate class="needs-validation">
                    <div class="row">
                        <div class="col">
                            <div class="row" id="reservation-dates">
                                <div class="col">
                                    <input type="text" name="start" class="form-control" required placeholder="Arrival">
                                </div>
                                <div class="col">
                                    <input type="text" name="end" class="form-control" required placeholder="Departure">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary">Search availability</button>
                </form>
            </div>
        </div>
    </div>
{{end}}
{{define "js"}}
    <script>
        const elem = document.getElementById('reservation-dates');
        const rangePicker = new DateRangePicker(elem, {
            buttonClass: 'btn',
            format: "yyyy-mm-dd"
        });
    </script>
{{end}}